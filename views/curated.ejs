<%- include('partials/header.ejs') %>

<style>
    .curated-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;
        padding: 0;
        margin: 0;
    }
    .curated-container {
        text-align: center;
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        padding: 50px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        max-width: 80%;
    }
    .curated-heading {
        font-size: 3em;
        font-weight: bold;
        color: #ffffff;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }
    .curated-links {
        list-style: none;
        padding: 0;
        display: flex;
        justify-content: space-around;
    }
    .curated-links li {
        margin: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .curated-links img {
        max-width: 150px;
        border-radius: 10px;
        margin-bottom: 10px;
        transition: transform 0.3s ease;
    }
    .curated-links a {
        text-decoration: none;
        font-size: 1.2em;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
        background-color: rgba(255, 255, 255, 0.2);
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    .curated-links a:hover {
        background-color: rgba(255, 255, 255, 0.4);
        color: #ff7e5f;
    }
    .curated-links li:hover img {
        transform: scale(1.1);
    }
</style>

<div class="curated-wrapper">
  <div class="curated-container">
    <h1 class="curated-heading">Curated</h1>
    <ul class="curated-links">
      <li>
        <img
          src="https://www.elegantthemes.com/blog/wp-content/uploads/2018/10/say-no.png"
          alt="Example 1"
        />
        <a href="https://jamesclear.com/saying-no" class="curated-link"
          >saying-no</a
        >
      </li>
      <li>
        <img src="https://media.newyorker.com/photos/59097e2f8b51cf59fc42419f/16:9/w_1280,c_limit/170227_r29468.jpg" alt="Example 2" />
        <a href="https://jamesclear.com/why-facts-dont-change-minds" class="curated-link"
          >why-facts-dont-change-minds</a
        >
      </li>
      <li>
        <img src="https://media.gq-magazine.co.uk/photos/5d722f3f22f23e0008122ce6/master/pass/20190906-Idea.jpg" alt="Example 3" />
        <a href="https://jamesclear.com/creative-thinking" class="curated-link"
          >creative-thinking</a
        >
      </li>
      <li>
        <img src="https://www.learnthesword.universitymartialarts.com/wp-content/uploads/2021/11/dana-abbott-samurai-1024.jpg" alt="Example 4" />
        <a href="https://jamesclear.com/zanshin" class="curated-link"
          >zanshin</a
        >
      </li>
    </ul>
  </div>
</div>
